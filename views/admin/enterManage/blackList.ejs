<div id="blackList" class="subFuncContent panel panel-default" style="display: <% if(show){ %>block<% }else{ %> none <% } %>" >

    <script src="/js/admin/enterManage/blackList.js"></script>

    <div class="panel-heading">
        <h3 class="panel-title"><%= name %></h3>
    </div>
    <div class="panel-body">
        <div class="toolbar">
            <button type="button" class="btn btn-danger delete" data-toggle="tooltip" data-placement="bottom"
                    title="删除选中的行" style="margin-right: 10px;">
                <i class="glyphicon glyphicon-trash"></i><span>删除</span>
            </button>
            <div class="btn-group">
                <button type="button" class="btn btn-primary" title="添加黑名单项" data-toggle="modal" data-target=".blackList-addItem">
                    <i class="glyphicon glyphicon glyphicon-plus"></i><span>添加</span>
                </button>
                <button type="button" class="btn btn-primary" title="导入黑名单项" data-toggle="modal" data-target=".blackList-import">
                    <i class="glyphicon glyphicon glyphicon-import"></i><span>导入</span>
                </button>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12 message">
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <table></table>
            </div>
        </div>

        <!-- 添加对话框 -->
        <div class="modal fade blackList-addItem" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <form class="form" action="/admin/enterManager/blackList" method="post">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h5 class="modal-title">添加黑名单项</h5>
                        </div>
                        <div class="modal-body form">
                            <div class="form-group message">
                            </div>
                            <div class="form-group">
                                <label>姓名：</label>
                                <input name="name" type="text" class="form-control" placeholder="姓名">
                            </div>
                            <div class="form-group">
                                <label>证件号：</label>
                                <input name="id_number" type="text" class="form-control" placeholder="证件号">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                            <button type="submit" class="btn btn-primary">添加</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>

        <!-- 导入对话框 -->
        <div class="modal fade blackList-import" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <form action="/admin/enterManager/blackList" enctype="multipart/form-data" method="post">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">数据导入</h4>
                        </div>
                        <div class="modal-body form">
                            <div class="form-group message">
                            </div>
                            <div class="form-group">
                                <label>文件：</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="File Name" disabled>
                                    <span class="input-group-btn">
                                        <label for="file_blackList" class="btn btn-primary">选择文件</label>
                                        <input id="file_blackList" name="file" type="file"
                                               style="position:absolute;clip:rect(0 0 0 0);">
                                    </span>
                                </div>

                            </div>
                            <div class="form-group">
                                <label>数据示例：</label>
                                <ul class="nav nav-tabs">
                                    <li role="presentation" class="active" value="csv"><a>CSV</a></li>
                                    <li role="presentation" value="xlsx"><a>XLSX</a></li>
                                    <li role="presentation" value="json"><a>JSON</a></li>
                                    <li role="presentation" value="xml"><a>XML</a></li>
                                </ul>
                            </div>
                            <div class="form-group">
                                <div class="thumbnail">
                                    <img src="/img/blackList_example_csv.jpg" />
                                </div>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                            <button type="submit" class="btn btn-primary">上传</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
